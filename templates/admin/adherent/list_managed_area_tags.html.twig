{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if object.managedArea %}
        {% for tag in object.managedArea.tags %}
            <a href="{{ path('admin_app_referenttag_edit', { id: tag.id }) }}">
                {{- tag.code -}}
            </a>
            {%- if not loop.last -%}, {%- endif -%}
        {% endfor %}
    {% endif %}
{% endblock %}
